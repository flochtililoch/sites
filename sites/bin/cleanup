#!/bin/bash

root_dir=/var/www/sites/var/

if [[ -z "$1" ]]; then
  echo "Usage: $0 project [db_file]"
  exit 1
fi

project=$1
db_name=${project//\-/\_}

if [ -n "$2" ]
	then db_file=$2
	else 
		db_file=$(ls -t1 ${root_dir}sql/${db_name}-* | head -n1)
fi

cd /var/www/${project} && git clean -f -d && git pull && git reset --hard HEAD
db-drop ${db_name}
db-create ${db_name}
db-import ${db_file}